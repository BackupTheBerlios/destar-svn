def _q_exception_handler [html] (request, exc):
	if isinstance(exc, quixote.errors.TraversalError):
		header(_("Page not found"))
		'<p>'
		_('This page does not exist')
		'</p>'
		footer()
	if isinstance(exc, quixote.errors.AccessError) or isinstance(exc, quixote.errors.PublishError):
		header(_(exc.title))
		'<p>'
		_(exc.public_msg)
		'</p>'
		footer()
	else:
		raise exc


def values [html] (request):
	header("Dump of the request_object")
	htmltext(request.dump_html())
	footer()


