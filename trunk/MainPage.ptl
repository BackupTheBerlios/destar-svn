def menu(request):
	a = [
		('user/',   _('User')),
		('admin/',  _('Administration')),
		('config/', _('Configuration')),
		('',        ''),
	]

	if request.session.level:
			a.append( ('user/logout', _('Log out')) )
	else:
			a.append( ('user/login', _('Log in')) )

	if request.session.level > 3:
		a.append( ('', '') )
		a.append( ('values', _("Request values")) )
	return a



